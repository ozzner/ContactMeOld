<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="pe.nullpoint.contactme.view.Activity_profile"
        android:weightSum="1">

    <RelativeLayout

            android:background="@color/main_secondary_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:padding="2dp"
            android:id="@+id/lay_content1"
            android:layout_weight="0.1">



            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/contact1"
                android:layout_marginTop="10dp"
                app:border_width="0.5dp"
                app:border_color="@color/transparent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:background="@drawable/btn_rounded_corner"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/lay_footer1"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desarrollo"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/textView"
                    android:layout_above="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programador y diseñador android"
                    android:id="@+id/textView3"
                    android:textColor="@color/main_accent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView" />

            </RelativeLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_rating"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:numStars="5"
                android:rating="2.5"
                style="@style/foodRatingBar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponibilidad"
                android:textColor="@color/main_accent"
                android:id="@+id/textView9"
                android:layout_marginLeft="10dp"

                android:paddingRight="6dp"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:layout_alignTop="@+id/profile_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiencia"
                android:textColor="@color/main_accent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:paddingLeft="6dp"
                android:id="@+id/textView10"
                android:layout_alignTop="@+id/profile_image"
                android:layout_alignRight="@+id/lay_footer1"
                android:layout_alignEnd="@+id/lay_footer1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_color"
                android:paddingRight="6dp"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5 años"
                android:paddingLeft="6dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/main_color"
                android:id="@+id/textView12"
                android:layout_below="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <!--<com.pkmmte.view.CircularImageView-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:src="@drawable/contact1"-->
            <!--app:border="true"-->
            <!--app:border_color="@color/main_color"-->
            <!--app:border_width="4dp"-->
            <!--app:shadow="true"/>-->

        </RelativeLayout>



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/layout_bordes_3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1.00"
            android:padding="2dp"
            android:layout_margin="1dp"
            android:weightSum="1">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/lay_item_dni"
                android:layout_weight="0.11">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_location"
                    android:src="@drawable/ic_action_location_found"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:id="@+id/textView6"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_location"
                    android:layout_toEndOf="@+id/iv_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jr. Marañón 699 VMT"
                    android:id="@+id/textView5"
                    android:textColor="@color/main_secondary_color"
                    android:layout_marginRight="46dp"
                    android:layout_marginEnd="46dp"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/lay_item_numbers"
                android:layout_weight="0.11">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_numbers"
                    android:src="@drawable/ic_action_person"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:id="@+id/textView7"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_numbers"
                    android:layout_toEndOf="@+id/iv_numbers" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45868835"
                    android:id="@+id/textView8"
                    android:textColor="@color/main_secondary_color"
                    android:layout_marginRight="46dp"
                    android:layout_marginEnd="46dp"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/lay_item_mail"
                android:layout_weight="0.11">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_email"
                    android:src="@drawable/ic_action_email"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:id="@+id/textView2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_email"
                    android:layout_toEndOf="@+id/iv_email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rsantillanc@gmail.com"
                    android:id="@+id/textView4"
                    android:textColor="@color/main_secondary_color"
                    android:layout_marginRight="46dp"
                    android:layout_marginEnd="46dp"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lay_item_listnumbers"
                android:padding="5dp"
                android:layout_weight="0.11">


                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="122dp"
                    android:id="@+id/lsv_numbers"
                    android:background="@drawable/layout_bordes"
                    android:layout_centerHorizontal="true"
                    android:choiceMode="none" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >

    <Button
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:text="ContactMe!"
    android:layout_margin="5dp"
    android:onClick="profile_click"
    android:id="@+id/btn_contact_me"
    style="@style/btn_white_large"
    android:background="@drawable/button_standar"
    android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>




