                    android:layout_toEndOf="@+id/iv_email"
                    android:layout_marginLeft="47dp"
                    android:layout_marginStart="47dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
