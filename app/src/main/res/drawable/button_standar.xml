<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#800080"
           />
      <stroke
          android:width="1dp"
          android:color="#800080"
          />
      <corners
          android:radius="5dp"
           />
      <padding
          android:left="10dp"
          android:right="10dp"
           />
    </shape>
  </item>
  
  <item>
    <shape>
      <gradient
          android:startColor="#B000FF"
          android:endColor="#B000FF"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#B000FF" />
      <corners
          android:radius="5dp" />
      
      <padding
          android:left="10dp"
          android:right="10dp"
         />
    </shape>
  </item>

</selector>
